{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/database/*": ["./features/database/*"],
      "@/features/*": ["./features/*"],
      "@/styles/*": ["./styles/*"]
    }
  },
  "exclude": ["node_modules"]
}
